% custom_cv.sty
\ProvidesPackage{cv}

% Packages
\RequirePackage[utf8]{inputenc}
\RequirePackage{geometry}
\geometry{a4paper, margin=1in}
\RequirePackage{titlesec}
\RequirePackage{enumitem}
\RequirePackage{hyperref}
\RequirePackage{microtype}
\RequirePackage{fancyhdr}
\RequirePackage{tabularx}
\RequirePackage{amsmath}

% ATS Compatibility
\input{glyphtounicode}
\pdfgentounicode=1

% Header and Footer
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

% Formatting
\titleformat{\section}{\large}{\thesection}{1em}{}[\titlerule]
\titlespacing*{\section}{0pt}{\baselineskip}{\baselineskip}
\setlength{\parindent}{0pc}

% Custom Commands
\newcommand{\Record}[4]{
    \begin{tabular*}{0.99\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & #2 \\
      \textit{\small#3} & \textit{\small #4} \\
    \end{tabular*}\vspace{-2pt}
}

% Feature command now creates proper indentation
\newcommand{\Feature}[1]{
  \vspace{2pt}
  \hspace*{1em}\textbf{#1}
  \vspace{2pt}
}

% Define three levels of bullet lists with consistent indentation
% Level 1: Main bullets (directly under section or Record)
\setlist[itemize,1]{
  label=\raisebox{0.25ex}{\tiny$\bullet$},
  leftmargin=2em,      % Standard left margin
  topsep=2pt,          % Small space before list
  partopsep=0pt,
  itemsep=1pt,         % Tiny space between items
  parsep=0pt
}

% Level 2: Sub-bullets (under Feature or nested)
\setlist[itemize,2]{
  label=\raisebox{0.25ex}{\tiny$\circ$},  % Hollow bullet for sub-items
  leftmargin=2em,      % Additional indentation
  topsep=1pt,
  partopsep=0pt,
  itemsep=1pt,
  parsep=0pt
}

% Level 3: Sub-sub-bullets (if needed)
\setlist[itemize,3]{
  label=\raisebox{0.25ex}{\tiny$\diamond$},
  leftmargin=2em,
  topsep=1pt,
  partopsep=0pt,
  itemsep=1pt,
  parsep=0pt
}
